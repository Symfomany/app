{
    "name": "appli",
    "description": "Project of Demonstration to start with Angular 2",
    "version": "1.0.0",
    "author": "Boyer Julien <julien@meetserious.com>",
    "homepage": "https://github.com/Symfomany",
    "license": "MIT",
    "scripts": {
        "start": "npm run lint && npm run sass && tsc && concurrently \"tsc -w\"  \" exec-notify echo Compilé! # -> Success notification \" \"lite-server\"",
        "lite": "lite-server",
        "tsc": "tsc",
        "tsc:w": "tsc -w \" exec-notify echo Compilé! # -> Success notification \" ",
        "clean": "npm cache clean  rimraf dist",
        "lint": "tslint -c tslint.json ./src/**/*.ts",
        "sass": "node-sass --include-path scss assets/sass/main.scss   assets/dist/main.css",
        "watch-sass": "nodemon -e scss -x \"npm run sass\"",
        "docs": "typedoc --options typedoc.json  ./src/"
    },
    "licenses": [{
        "type": "MIT",
        "url": "https://github.com/angular/angular.io/blob/master/LICENSE"
    }],
    "dependencies": {
        "@angular/common": "~2.1.1",
        "@angular/compiler": "~2.1.1",
        "@angular/core": "~2.1.1",
        "@angular/forms": "~2.1.1",
        "@angular/http": "~2.1.1",
        "@angular/material": "^2.0.0-alpha.10",
        "@angular/platform-browser": "~2.1.1",
        "@angular/platform-browser-dynamic": "~2.1.1",
        "@angular/router": "~3.1.1",
        "@angular/upgrade": "~2.1.1",
        "angular-in-memory-web-api": "~0.1.13",
        "codelyzer": "~1.0.0-beta.2",
        "core-js": "^2.4.1",
        "materialize": "^1.0.0",
        "reflect-metadata": "^0.1.8",
        "rxjs": "5.0.0-beta.12",
        "systemjs": "0.19.39",
        "zone.js": "^0.6.25"
    },
    "devDependencies": {
        "@types/core-js": "^0.9.34",
        "@types/node": "^6.0.45",
        "concurrently": "^3.0.0",
        "exec-notify": "^0.1.3",
        "lite-server": "^2.2.2",
        "materialize-css": "^0.97.8",
        "node-sass": "^3.11.3",
        "nodemon": "^1.11.0",
        "rimraf": "^2.5.2",
        "tslint": "^3.15.1",
        "typescript": "^2.0.3"
    }
}